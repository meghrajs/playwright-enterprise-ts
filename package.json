{
  "name": "playwright-enterprise-ts",
  "private": true,
  "version": "1.0.0",
  "description": "Enterprise-style Playwright (TypeScript) framework: UI + API + E2E with CI artifacts",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --project=chromium --grep @ui",
    "test:api": "playwright test --grep @api",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "report": "playwright show-report",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0"
  }
}
